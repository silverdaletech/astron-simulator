<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="maintenance" name="Temporarily offline">
        <t t-call="web.frontend_layout">
            <div id="wrap">
                <t t-out="0"/>
                <div class="oe_structure oe_empty">
                    <section class="s_text_image pt104 pb104" data-snippet="s_image_text" data-name="Image - Text">
                        <div class="container">
                            <div class="row align-items-center">
                                <div class="col-lg-4 pb32">
                                    <img class="img img-fluid mx-auto" src="/sd_maintenace_mode/static/upgrade.jpg"/>
                                </div>
                                <div class="col-lg-8 text-lg-left text-center">
                                    <!--                                     <i class="fa fa-exclamation-triangle" style="color:red;font-size:100px;margin-left:20%"/>-->
                                    <h1 class="text-center">Temporarily offline</h1>

                                    <p style="font-size:30px; font-weight:bold;">
                                        <b>Don't panic.</b>
                                        We're down for a short time to perform maintenance on our site to give you the
                                        best possible experience. Check back soon!
                                    </p>
                                    <section class="s_countdown pt48 pb48 o_colored_level" data-display="dhms"
                                             data-end-action="nothing" data-size="175" data-layout="circle"
                                             data-layout-background="none" data-progress-bar-style="surrounded"
                                             data-progress-bar-weight="thin" data-text-color="o-color-1"
                                             data-layout-background-color="400" data-progress-bar-color="o-color-1"
                                             data-snippet="s_countdown" t-att-data-end-time="datetime.datetime.now().timestamp() + delay" data-name="Countdown"
                                             style="background-image: none;">
                                        <div class="container">
                                            <div class="s_countdown_canvas_wrapper text-center d-flex justify-content-center"/>
                                        </div>
                                    </section>
                                    <t t-esc="aaa"/>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </t>
    </template>
</odoo>



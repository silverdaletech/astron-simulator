<?xml version="1.0"?>
<odoo>
    <!--    "res.config.settings" form view is inherited to add a boolean field for payment terminals in the POS 'Payment Terminals' section-->
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.crm</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="25"/>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('app_settings_block')]/div[@id='o_settings_use_payment_terminals']/div[3]"
                   position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="module_sd_pos_stripe_payment_terminal"
                     title="The transactions are processed by Stripe. Set your Vantiv credentials on the related payment method.">
                    <div class="o_setting_left_pane">
                        <field name="module_sd_pos_stripe_payment_terminal"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_sd_pos_stripe_payment_terminal" string="Strip Payment Terminal"/>
                        <div class="text-muted">
                            Accept payments with a Strip payment terminal
                        </div>
                        <div class="content-group"
                             attrs="{'invisible': [('module_sd_pos_stripe_payment_terminal', '=', False)]}">
                            <div class="mt16" id="btn_sd_pos_stripe_payment_terminal">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 col-lg-6 o_setting_box" id="module_sd_pos_square_payment_terminal"
                     title="The transactions are processed by Square Terminal. Set your Square credentials on the related payment method.">
                    <div class="o_setting_left_pane">
                        <field name="module_sd_pos_square_payment_terminal"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="module_sd_pos_square_payment_terminal" string="Square Payment Terminal"/>
                        <div class="text-muted">
                            Accept payments with a Square payment terminal
                        </div>
                        <div class="content-group"
                             attrs="{'invisible': [('module_sd_pos_square_payment_terminal', '=', False)]}">
                            <div class="mt16" id="btn_module_sd_pos_square_payment_terminal">
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
